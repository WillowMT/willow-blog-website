---
// Component Imports
import Button from "../components/Button.astro";
import Card from "../components/Card";
import MiniBlog from "../components/MiniBlog.astro";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import Pagination from "../components/Pagination.astro";
import { getAllBlogPost } from "../utils/utils";
import "../style/global.css";

const posts = await getAllBlogPost();
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Willow's Blog</title>
    </head>

    <body>
        <Navigation />
        <Hero />
        <section class="text-gray-400 bg-[#000045] body-font overflow-hidden">
            <div class="container px-5 py-24 mx-auto">
                <div class="-my-8 divide-y-2 divide-gray-800">
                    {
                        posts.map((post: any) => {
                            return (
                                <MiniBlog
                                    title={post.title}
                                    date={new Date(
                                        post._createdAt
                                    ).toDateString()}
                                    description={post.description}
                                    category={post.categories}
                                    trending={post.trending}
                                    slug={post.slug.current}
                                />
                            );
                        })
                    }
                    <Pagination />
                </div>
            </div>
        </section>
        <Footer />
    </body>
</html>
