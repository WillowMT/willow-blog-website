---
import { urlForImage, sanityPortableText } from "../../utils/utils";
const { blog } = Astro.props;
---

<div class="mt-10">
    <h1 class="text-center text-6xl my-5">{blog.title}</h1>
    {
        blog.mainImage && <img src={urlForImage(blog.mainImage).toString()} alt="" />
    }
    <p>{blog.description}</p>
    <br>
    <Fragment set:html={sanityPortableText(blog.body)} />
</div>
